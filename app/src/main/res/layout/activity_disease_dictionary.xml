<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DiseaseDictionaryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="동물 질병 사전"
        android:textSize="40dp"
        android:fontFamily="@font/custom_font_family"
        android:textColor="@color/colortest"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp">
        <EditText
            android:id="@+id/dis_edit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="enter disease name.."
            android:autofillHints="enter disease name.."
            android:fontFamily="@font/custom_font_family"
            android:backgroundTint="@color/colortest1"
            android:textSize="22dp"/>
        <Button
            android:id="@+id/dis_btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="search"
            android:textColor="@color/colorwhite"
            android:background="@drawable/rounded"
            android:textSize="17dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/dis_text_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="8sp"/>
    </ScrollView>


</LinearLayout>